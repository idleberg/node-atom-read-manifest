{
  "name": "atom-read-manifest",
  "version": "0.4.1",
  "description": "Read the manifest (package.json) of any installed Atom package",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./tsconfig.tsbuildinfo && tsc --pretty --project ./",
    "dev": "tsc --watch --pretty --project ./",
    "lint:fix": "tslint --fix --project ./",
    "lint": "tslint --project ./",
    "test": "npm run lint"
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-atom-read-manifest.git"
  },
  "keywords": [
    "atom",
    "atom package",
    "manifest",
    "package.json",
    "package manifest"
  ],
  "dependencies": {
    "caller-callsite": "^4.1.0",
    "find-up": "^4.1.0",
    "util": "^0.12.1"
  },
  "devDependencies": {
    "@types/atom": "^1.36.2",
    "@types/node": "^13.7.4",
    "husky": "^4.2.3",
    "rimraf": "^3.0.2",
    "tslint": "^6.0.0",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
