{
  "name": "atom-read-manifest",
  "version": "0.2.1",
  "description": "Read the manifest (package.json) of any installed Atom package",
  "license": "MIT",
  "scripts": {
    "build": "tsc --pretty --project ./",
    "dev": "tsc --watch --pretty --project ./",
    "lint": "tslint --project ./",
    "test": "npm run lint"
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-atom-read-manifest.git"
  },
  "keywords": [
    "atom",
    "atom package",
    "manifest",
    "package.json",
    "package manifest"
  ],
  "dependencies": {
    "find-up": "^4.0.0",
    "util": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "^12.0.8",
    "husky": "^2.4.1",
    "tslint": "^5.17.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
